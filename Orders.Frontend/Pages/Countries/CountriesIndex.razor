@page "/countries"

<div class="card">
    <div class="card-header">
        <span>
            <i class="bi bi-globe-americas"/> Países
            <a class="btn btn-primary btn-sm float-end" href="/countries/create">
                <i class="bi bi-plus-square"/> Nuevo país</a>
        </span>
    </div>
    <div class="card-body">
        <Filter PlaceHolder="Buscar país..." Callback="FilterCallBack" />
        <GenericList MyList="Countries">
            <Body>
                <Pagination CurrentPage="currentPage" TotalPage="totalPage" SelectedPage="SelectedPageAsync" RecordsNumber="SelectedRecordsNumberAsync"/>
                
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>País</th>
                            <th style="width:210px">Departamentos / Estados</th>
                            <th style="width:168px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var country in Countries!)
                        {
                            <tr>
                                <td><a href="/countries/details/@country.Id">@country.Name</a></td>
                                <td>@country.StatesNumber</td>
                                <td>
                                    <a href="/countries/edit/@country.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"/> Editar</a>
                                    <button @onclick=@(()=> DeleteAsync(country)) class="btn btn-danger btn-sm"><i class="bi bi-trash" /> Borrar</button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </Body>
        </GenericList>
    </div>
</div>



